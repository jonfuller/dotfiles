[user]
  name = Jon Fuller
  email = fullerjc@gmail.com
<% if RUBY_PLATFORM =~ /ming|win/ %>
[core]
  editor = gvim.exe
<% else %>
[core]
  editor = mvim
<% end %>
[color]
  diff = auto
  status = auto
  branch = auto
  ui = auto
[merge]
  tool = p4merge
[mergetool "p4merge"]
  cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
  trustExitCode = false
  keepBackup = false
  keepTemporaries = false
[github]
  user = jonfuller
  token = <%= githubtoken %>
[alias]
  ignored = "!git ls-files --others --exclude-standard"
[branch]
  autosetupmerge = true
